<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/fade</item>
    </style>

    <!--设置Activity转场无动画效果-->
    <style name="fade" mce_bogus="1" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
        <item name="android:taskOpenEnterAnimation">@null</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@null</item>
        <item name="android:taskToFrontEnterAnimation">@null</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@null</item>
    </style>

    <!-- ToolBar菜单样式 -->
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="colorPrimary">@color/fenhong</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <!--页面最大的 LinearLyout sstyle样式-->
    <style name="ll_style">
        <item name="android:layout_above">@+id/tabbar</item>
        <item name="android:layout_below">@+id/title</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!--一般TextView字体和颜色的样式-->
    <style name="TextStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#8b8b8b</item>
    </style>

    <!--RatingBar样式-->
    <style name="GlimmerRatingBar" parent="Base.Widget.AppCompat.RatingBar">
        <!--修改默认图片-->
        <item name="android:progressDrawable">@drawable/glimmerratingbar</item>
    </style>

    <style name="GlimmerRatingBar_white" parent="Base.Widget.AppCompat.RatingBar">
        <!--修改默认图片-->
        <item name="android:progressDrawable">@drawable/glimmerratingbar_white</item>
    </style>

</resources>
