                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="设备1"
                    android:textColor="@color/textColor_default"
                    android:textSize="15sp" />

