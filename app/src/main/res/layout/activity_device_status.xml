            android:textColor="@color/textColor_default"
            android:textSize="15sp" />

        <CheckBox
            android:id="@+id/cb_device4_status1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:checked="true"
            android:text="状态1"
            android:textColor="@color/textColor_default"
            android:textSize="13sp" />

    </LinearLayout>

    <!--设备5-->
    <LinearLayout
        android:id="@+id/ll_device5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_device4"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="设备5"
            android:textColor="@color/textColor_default"
            android:textSize="15sp" />

        <CheckBox
            android:id="@+id/cb_device5_status1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:checked="true"
            android:text="状态1"
            android:textColor="@color/textColor_default"
            android:textSize="13sp" />

    </LinearLayout>

    <!--设备6-->
    <LinearLayout
        android:id="@+id/ll_device6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_device5"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="0dp"
