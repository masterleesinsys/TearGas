<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_not_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/general_xiaoxi_no" />

    <TextView
        android:id="@+id/tv_not_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_not_info"
        android:layout_centerHorizontal="true"
        android:text="您还没有相关的信息"
        android:textColor="@color/textColor_default"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_suggest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_not_info"
        android:layout_centerHorizontal="true"
        android:paddingTop="15dp"
        android:text="可以去看看有哪些想看的"
        android:textColor="@color/textColor_hint"
        android:textSize="11sp" />

</RelativeLayout>