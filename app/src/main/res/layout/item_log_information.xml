<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text="布防"
            android:textColor="@color/textColor_default"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/tv_status"
            android:gravity="center_vertical"
            android:text="2017-06-17 12：35"
            android:textColor="@color/textColor_hint"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="15dp">

            <TextView
                android:id="@+id/tv_is_activation"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:gravity="center_vertical"
                android:text="已激活"
                android:visibility="invisible"
                android:textColor="@color/normal"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_operator"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@+id/tv_is_activation"
                android:gravity="center_vertical"
                android:text="操作员：张三"
                android:textColor="@color/main_update_color"
                android:textSize="14sp" />

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_below="@+id/rl_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/textColor_division" />

</RelativeLayout>